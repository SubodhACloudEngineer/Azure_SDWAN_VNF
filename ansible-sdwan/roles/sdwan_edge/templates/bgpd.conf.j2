! /etc/frr/bgpd.conf
router bgp {{ local_asn }}
 bgp router-id {{ wan_ip }}
 timers bgp {{ bgp.keepalive }} {{ bgp.holdtime }}
 neighbor {{ peer_ip }} remote-as {{ peer_asn }}

 ! Advertise local LAN
 network {{ local_lan_cidr }}

 address-family ipv4 unicast
  neighbor {{ peer_ip }} activate
 exit-address-family

line vty
